<%= render 'shared/breadcrumb', title: "登录" %>

<div class="login-form">
  <%= form_tag admin_sessions_path do -%>
    <div class="control-group">
      <%= label_tag :email, '邮箱:', class: 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, params[:email] %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :email, '密码:', class: 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, params[:password] %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag "登录", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
