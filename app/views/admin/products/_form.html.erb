<%= form_for([:admin, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, '名称' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="control-group">
    <%= f.label :image, '图片', :class => 'control-label' %>
    <% if @product.image? %>
      <ul class="thumbnails">
        <li class="thumbnail">
          <%= image_tag(@product.image.thumb.url) %>
        </li>
      </ul>
    <% end %>
    <div class="controls">
			<%= f.hidden_field :image_cache %>
			<%= f.file_field :image %>
    </div>
  </div>
  <div class="field">
    <%= f.label :description, '产品描述' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category, '分类' %><br />
    <%= f.select :category_id, Category.all.collect { |c| [c.name, c.id] } %>
  </div>
  <div class="actions">
    <%= f.submit '提交', class: 'btn' %>
    <%= link_to '返回', admin_products_path, class: 'btn' %>
  </div>
<% end %>
