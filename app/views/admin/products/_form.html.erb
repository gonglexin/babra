<%= form_for [:admin, @product], html: { class: 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', target: @product %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, class: 'control-label' %>
    <% if @product.image? %>
      <ul class="thumbnails">
        <li class="thumbnail">
          <%= image_tag(@product.image.thumb.url) %>
        </li>
      </ul>
    <% end %>
    <div class="controls">
      <%= f.hidden_field :image_cache %>
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :taobao_url, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :taobao_url, class: 'text_field', style: "width: 400px;" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, style: "width: 400px;", cols: 100, rows: 12, class: 'text-area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category, class: 'control-label' %>
    <div class="controls">
      <%= f.select :category_id, Category.all.collect { |c| [c.name, c.id] } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit '提交', class: 'btn' %>
    <%= link_to '返回', admin_products_path, class: 'btn' %>
  </div>
<% end %>
